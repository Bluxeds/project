    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) return label.join(' ');
            return label;
        };

        const globalChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { labels: { color: '#F7FAFC', font: { size: 14 }}},
                tooltip: { callbacks: { title: tooltipTitleCallback }}
            },
            scales: {
                y: { ticks:  { color: '#F7FAFC' }, grid: { color: 'rgba(247, 250, 252, 0.1)' }},
                x: { ticks: { color: '#F7FAFC' }, grid: { color: 'rgba(247, 250, 252, 0.1)' }}
            }
        };

        const giBleedCtx = document.getElementById('giBleedChart').getContext('2d');
        new Chart(giBleedCtx, {
            type: 'bar',
            data: {
                labels: ['Vomited Blood (Hematemesis)', 'Tarry Stool (Melena)', 'Bright Red Stool (Hematochezia)'],
                datasets: [{
                    label: 'Upper GI Bleed',
                    data: [100, 80, 10],
                    backgroundColor: 'rgba(236, 72, 153, 0.7)',
                    borderColor: '#EC4899',
                    borderWidth: 1
                }, {
                    label: 'Lower GI Bleed',
                    data: [10, 20, 100],
                    backgroundColor: 'rgba(6, 182, 212, 0.7)',
                    borderColor: '#06B6D4',
                    borderWidth: 1
                }]
            },
            options: {
                ...globalChartOptions,
                plugins: { ...globalChartOptions.plugins, title: { display: true, text: 'Likelihood of Upper or Lower GI Bleed (%)', color: '#F7FAFC', font: {size: 16} }},
                scales: {
                    y: {
                        max: 100,
                        min: 0,
                        ticks: {
                            color: '#F7FAFC',
                            stepSize: 10,
                            callback: function(value) {
                                return value + '%';
                            }
                        },
                        grid: { color: 'rgba(247, 250, 252, 0.1)' },
                        title: { display: true, text: 'Likelihood (%)', color: '#F7FAFC' }
                    },
                    x: { ...globalChartOptions.scales.x }
                }
            }
        });

        const donutOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'top', labels: { color: '#F7FAFC', font: {size: 14} }},
                tooltip: { callbacks: { title: tooltipTitleCallback }}
            }
        };

        const bluntTraumaCtx = document.getElementById('bluntTraumaChart').getContext('2d');
        new Chart(bluntTraumaCtx, {
            type: 'doughnut',
            data: {
                labels: ['Massive Internal Bleeding', 'Visible Injury', 'Other'],
                datasets: [{ label: 'Primary Danger', data: [75, 15, 10], backgroundColor: ['#EC4899', '#F59E0B', '#4A5568'], hoverOffset: 4 }]
            },
            options: donutOptions
        });
        
        const penetratingTraumaCtx = document.getElementById('penetratingTraumaChart').getContext('2d');
        new Chart(penetratingTraumaCtx, {
            type: 'doughnut',
            data: {
                labels: ['Damage Along Path', 'Exit Wound Injury', 'Ricochet Injury'],
                datasets: [{ label: 'Primary Danger', data: [65, 25, 10], backgroundColor: ['#06B6D4', '#10B981', '#4A5568'], hoverOffset: 4 }]
            },
            options: donutOptions
        });
    </script>
